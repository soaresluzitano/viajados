    <script>
        // Dados dos assentos
        const totalSeats = 44;
        const seatPrice = 90; // Valor por assento
        let blockedSeats = JSON.parse(localStorage.getItem('blockedSeats')) || [];
        let selectedSeats = [];
        let isAdminAuthenticated = false;
        
        // Elementos DOM
        const seatsContainer = document.getElementById('seats-container');
        const selectedSeatsList = document.getElementById('selected-seats-list');
        const priceInfo = document.getElementById('price-info');
        const whatsappBtn = document.getElementById('whatsapp-btn');
        const adminControls = document.getElementById('admin-controls');
        const passwordPrompt = document.getElementById('password-prompt');
        const adminPanel = document.getElementById('admin-panel');
        const adminPasswordInput = document.getElementById('admin-password');
        const passwordError = document.getElementById('password-error');
        const confirmationModal = document.getElementById('confirmation-modal');
        const modalSeatsList = document.getElementById('modal-seats-list');
        const modalTotalPrice = document.getElementById('modal-total-price');
        
        // Inicializar a interface
        function initializeApp() {
            renderSeats();
            updateSelectedSeatsList();
            setupEventListeners();
        }
        
        // Renderizar os assentos
        function renderSeats() {
            seatsContainer.innerHTML = '';
            let seatNumber = 1;
            
            for (let row = 0; row < totalSeats / 4; row++) {
                const seatRow = document.createElement('div');
                seatRow.className = 'seat-row';
                
                // Assentos do lado esquerdo
                for (let i = 0; i < 2; i++) {
                    const seatId = seatNumber.toString().padStart(2, '0');
                    seatRow.appendChild(createSeatElement(seatId));
                    seatNumber++;
                }
                
                // Corredor
                const aisle = document.createElement('div');
                aisle.className = 'aisle';
                aisle.innerHTML = '‚Ä¢';
                seatRow.appendChild(aisle);
                
                // Assentos do lado direito
                for (let i = 0; i < 2; i++) {
                    const seatId = seatNumber.toString().padStart(2, '0');
                    seatRow.appendChild(createSeatElement(seatId));
                    seatNumber++;
                }
                
                seatsContainer.appendChild(seatRow);
            }
        }
        
        // Criar elemento de assento
        function createSeatElement(seatId) {
            const seat = document.createElement('div');
            
            // Verificar se o assento est√° bloqueado
            const isBlocked = blockedSeats.includes(seatId);
            const isSelected = selectedSeats.includes(seatId);
            
            seat.className = 'seat ' + (isBlocked ? 'blocked' : (isSelected ? 'selected' : 'available'));
            seat.textContent = seatId;
            seat.dataset.seat = seatId;
            
            if (!isBlocked) {
                seat.addEventListener('click', () => toggleSeat(seatId));
            }
            
            return seat;
        }
        
        // Alternar sele√ß√£o de assento
        function toggleSeat(seatId) {
            if (blockedSeats.includes(seatId)) return;
            
            const index = selectedSeats.indexOf(seatId);
            
            if (index === -1) {
                selectedSeats.push(seatId);
            } else {
                selectedSeats.splice(index, 1);
            }
            
            renderSeats();
            updateSelectedSeatsList();
            
            // Habilitar ou desabilitar o bot√£o do WhatsApp
            whatsappBtn.disabled = selectedSeats.length === 0;
        }
        
        // Atualizar a lista de assentos selecionados
        function updateSelectedSeatsList() {
            const totalPrice = selectedSeats.length * seatPrice;
            selectedSeatsList.textContent = selectedSeats.length > 0 ? selectedSeats.join(', ') : 'Nenhum';
            priceInfo.textContent = `Total: R$ ${totalPrice.toFixed(2)}`;
        }
        
        // Renderizar controles administrativos
        function renderAdminControls() {
            adminControls.innerHTML = '';
            
            for (let i = 1; i <= totalSeats; i++) {
                const seatId = i.toString().padStart(2, '0');
                const isBlocked = blockedSeats.includes(seatId);
                
                const toggle = document.createElement('div');
                toggle.className = 'seat-toggle';
                
                const label = document.createElement('span');
                label.textContent = `Assento ${seatId}`;
                
                const switchContainer = document.createElement('label');
                switchContainer.className = 'switch';
                
                const input = document.createElement('input');
                input.type = 'checkbox';
                input.checked = !isBlocked;
                input.dataset.seat = seatId;
                
                const slider = document.createElement('span');
                slider.className = 'slider';
                
                switchContainer.appendChild(input);
                switchContainer.appendChild(slider);
                
                toggle.appendChild(label);
                toggle.appendChild(switchContainer);
                
                adminControls.appendChild(toggle);
                
                // Adicionar event listener
                input.addEventListener('change', (e) => {
                    toggleSeatAvailability(seatId, e.target.checked);
                });
            }
        }
        
        // Alternar disponibilidade do assento
        function toggleSeatAvailability(seatId, available) {
            if (available) {
                // Remover da lista de bloqueados
                const index = blockedSeats.indexOf(seatId);
                if (index !== -1) {
                    blockedSeats.splice(index, 1);
                }
            } else {
                // Adicionar √† lista de bloqueados
                if (!blockedSeats.includes(seatId)) {
                    blockedSeats.push(seatId);
                }
                
                // Remover da lista de selecionados, se estiver selecionado
                const selectedIndex = selectedSeats.indexOf(seatId);
                if (selectedIndex !== -1) {
                    selectedSeats.splice(selectedIndex, 1);
                    updateSelectedSeatsList();
                    whatsappBtn.disabled = selectedSeats.length === 0;
                }
            }
            
            // Salvar no localStorage
            localStorage.setItem('blockedSeats', JSON.stringify(blockedSeats));
            
            // Atualizar a exibi√ß√£o
            renderSeats();
        }
        
        // Bloquear todos os assentos
        function blockAllSeats() {
            for (let i = 1; i <= totalSeats; i++) {
                const seatId = i.toString().padStart(2, '0');
                if (!blockedSeats.includes(seatId)) {
                    blockedSeats.push(seatId);
                }
            }
            
            // Limpar sele√ß√µes
            selectedSeats = [];
            updateSelectedSeatsList();
            whatsappBtn.disabled = true;
            
            // Salvar no localStorage
            localStorage.setItem('blockedSeats', JSON.stringify(blockedSeats));
            
            // Atualizar a exibi√ß√£o
            renderSeats();
            renderAdminControls();
        }
        
        // Desbloquear todos os assentos
        function unblockAllSeats() {
            blockedSeats = [];
            
            // Salvar no localStorage
            localStorage.setItem('blockedSeats', JSON.stringify(blockedSeats));
            
            // Atualizar a exibi√ß√£o
            renderSeats();
            renderAdminControls();
        }
        
        // Verificar senha de administrador
        function checkPassword() {
            const password = adminPasswordInput.value;
            
            if (password === "Nicolas1") {
                isAdminAuthenticated = true;
                passwordPrompt.style.display = 'none';
                adminPanel.style.display = 'block';
                renderAdminControls();
            } else {
                passwordError.textContent = "Senha incorreta. Tente novamente.";
                adminPasswordInput.value = '';
            }
        }
        
        // Configurar event listeners
        function setupEventListeners() {
            // Bot√£o do WhatsApp
            whatsappBtn.addEventListener('click', showConfirmationModal);
            
            // Permitir pressionar Enter para enviar a senha
            adminPasswordInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    checkPassword();
                }
            });
        }
        
        // Mostrar modal de confirma√ß√£o
        function showConfirmationModal() {
            if (selectedSeats.length === 0) return;
            
            const totalPrice = selectedSeats.length * seatPrice;
            
            modalSeatsList.textContent = selectedSeats.join(', ');
            modalTotalPrice.textContent = `Valor total: R$ ${totalPrice.toFixed(2)}`;
            
            confirmationModal.style.display = 'flex';
        }
        
        // Fechar modal
        function closeModal() {
            confirmationModal.style.display = 'none';
        }
        
        // Confirmar reserva e enviar por WhatsApp
        function confirmReservation() {
            closeModal();
            sendWhatsAppMessage();
        }
        
        // Enviar mensagem pelo WhatsApp
        function sendWhatsAppMessage() {
            if (selectedSeats.length === 0) return;
            
            const phoneNumber = "5511986518123";
            const totalPrice = selectedSeats.length * seatPrice;
            
            // Criar mensagem
            const message = `Ol√°! Gostaria de reservar os seguintes assentos: ${selectedSeats.join(', ')}. Total: R$ ${totalPrice.toFixed(2)}.`;
            
            // Codificar a mensagem para URL
            const encodedMessage = encodeURIComponent(message);
            
            // Criar o link do WhatsApp
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            
            // Abrir em uma nova janela/aba
            window.open(whatsappUrl, '_blank');
        }
        
        // Alternar entre abas
        function switchTab(tabId) {
            // Desativar todas as abas
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Ativar a aba selecionada
            document.querySelector(`.tab:nth-child(${tabId === 'user-tab' ? 1 : 2})`).classList.add('active');
            document.getElementById(tabId).classList.add('active');
            
            // Se for a aba administrativa e n√£o estiver autenticado, mostrar prompt de senha
            if (tabId === 'admin-tab' && !isAdminAuthenticated) {
                passwordPrompt.style.display = 'block';
                adminPanel.style.display = 'none';
                adminPasswordInput.value = '';
                passwordError.textContent = '';
            }
        }
        
        // Inicializar a aplica√ß√£o quando o documento estiver pronto
        document.addEventListener('DOMContentLoaded', initializeApp);
    </script>
</body>
</html>
